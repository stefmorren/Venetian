<Window x:Class="Venetian.MessagePanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Venetian"
        mc:Ignorable="d"
        Title="Venetian" Height="378.851" Width="624.472">
    <Grid>
        <ListBox x:Name="listBoxReceivers" HorizontalAlignment="Left" Height="301" Margin="10,31,0,0" VerticalAlignment="Top" Width="133" SelectionChanged="listBoxReceivers_SelectionChanged"/>
        <Label x:Name="label" Content="Contacten:" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="133"/>
        <Border BorderThickness="2" BorderBrush="Black" Margin="189,31,82,78">
            <ScrollViewer Name="scrollviewerConversation">
                <TextBlock Background="AliceBlue" x:Name="textBlockMessages" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
        </Border>

        <TextBox x:Name="textBoxMessage" HorizontalAlignment="Left" Height="57" Margin="189,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256"/>
        <Button x:Name="buttonSend" Content="Verzenden" HorizontalAlignment="Left" Margin="450,275,0,0" VerticalAlignment="Top" Width="75" Height="57" Click="buttonSend_Click"/>
    </Grid>
</Window>
